@model bool

@if (Model)
{
    <p>Your email was confirmed!</p>
}
else
{
    <p>Your email could not be confirmed :(</p>

    <form asp-action="ResendEmailConfirmation">
        <p>Try resending email confirmation:</p>
        <div class="form-group">
            <label for="email"></label>
            <input required id="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
            <input type="submit" value="Resend email confirmation" class="btn btn-primary" />
        </div>
    </form>
}