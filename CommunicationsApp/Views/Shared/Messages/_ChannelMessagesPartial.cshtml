@model CommunicationsApp.Web.Models.ChannelOverviewVM

<div class="chat-container" data-open-chat-code="@Model.Channel.Code">
    <div class="d-flex flex-row">
        <div>
            <p id="channelName" class="flex-grow-1 fw-bold">@Model.Channel.Name</p>
            <button id="editChannelNameBtn" data-channel-id="@Model.Channel.Id" data-channel-code="@Model.Channel.Code" class="btn btn-secondary">
                <i class="fa-solid fa-pen-to-square"></i>
            </button>
        </div>
        <p>Channel code: @Model.Channel.Code</p>

        <div class="dropdown-center">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Members
            </button>
            <ul id="openChatMembersList" class="dropdown-menu">
                <li class="dropdown-item">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNewMembersModal">
                        Add members
                    </button>
                </li>
                <li><hr /></li>

                @foreach (var member in Model.Channel.Members)
                {
                    <partial name="/Views/Shared/Channels/_OpenChannelMemberListItemPartial.cshtml" model="member" />
                }
            </ul>
        </div>
    </div>

    <div id="channelMessages" class="messages-container" data-channel-id="@Model.Channel.Id" data-next-cursor="@Model.Messages.NextCursor">
        @if (!Model.Messages.Values.Any())
        {
            <p>No messages ...</p>
        }
        else
        {
            @foreach (var message in Model.Messages.Values.Reverse())
            {
                <partial name="/Views/Shared/Messages/_MessagePartial.cshtml" model="message" />
            }
        }
    </div>
    <form id="messageSendForm" asp-controller="Messages" asp-action="Create" asp-route-id="@Model.Channel.Id">
        <input type="file"
               class="form-control"
               id="messageMediaUpload"
               multiple
               accept=".png,.jpg,.jpeg,video/*,application/pdf,application/msword,text/plain">

        <div class="input-group mt-3 mb-3">
            <input type="hidden" id="channelCode" value="@Model.Channel.Code" />
            <input id="messageInput"
                   type="text"
                   maxlength="1000"
                   class="form-control"
                   autocomplete="off"
                   placeholder="Write your message" />

            <button class="btn btn-outline-secondary" type="submit">
                <i class="fa-regular fa-paper-plane"></i>
            </button>
        </div>
    </form>
</div>


<div class="modal fade" id="addNewMembersModal" tabindex="-1" aria-labelledby="addNewMembersModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="addNewMembersModalLabel">Add new members</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addNewMembersForm"
                      asp-controller="ChannelMembers"
                      asp-action="AddUserAsMembersToChannel"
                      asp-route-channelId="@Model.Channel.Id">
                    <div class="form-group">
                        <label for="members">Select users</label>

                        <input required
                               id="newMemberSearchInput"
                               type="text"
                               class="form-control"
                               placeholder="Type in a username or email">

                        <div id="newMembersSearchResult" class="mt-3"></div>
                    </div>

                    <input type="submit" class="btn btn-primary" value="Add new members" />
                </form>
            </div>
        </div>
    </div>
</div>