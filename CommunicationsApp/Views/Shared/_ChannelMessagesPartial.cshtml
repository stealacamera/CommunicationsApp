@model CommunicationsApp.Web.Models.ChannelOverviewVM

<div class="chat-container" data-open-chat-code="@Model.Channel.Code">
    <div class="d-flex flex-row">
        <div>
            <p id="channelName" class="flex-grow-1 fw-bold">@Model.Channel.Name</p>
            <button id="editChannelNameBtn" data-channel-id="@Model.Channel.Id" data-channel-code="@Model.Channel.Code" class="btn btn-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                </svg>
            </button>
        </div>
        <p>Channel code: @Model.Channel.Code</p>

        <div class="dropdown-center">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Members
            </button>
            <ul class="dropdown-menu">
                @foreach (var member in Model.Channel.Members)
                {
                    <li class="dropdown-item"><span class="fw-bold">@member.Member.UserName</span> @member.Member.Email</li>
                }
            </ul>
        </div>
    </div>

    <div id="channelMessages" class="messages-container" data-channel-id="@Model.Channel.Id" data-next-cursor="@Model.Messages.NextCursor">
        @if (!Model.Messages.Values.Any())
        {
            <p>No messages ...</p>
        }
        else
        {
            @foreach (var message in Model.Messages.Values.Reverse())
            {
                <partial name="_MessagePartial" model="message" />
            }
        }
    </div>
    <form id="messageSendForm" asp-controller="Messages" asp-action="Create" asp-route-id="@Model.Channel.Id">        
        <input type="file" class="form-control" id="messageMediaUpload" multiple>
        <div class="input-group mt-3 mb-3">
            <input type="hidden" id="channelCode" value="@Model.Channel.Code" />
            <input id="messageInput" type="text" class="form-control" placeholder="Write your message" />

            <button class="btn btn-outline-secondary" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                    <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z" />
                </svg>
            </button>
        </div>
    </form>
</div>
